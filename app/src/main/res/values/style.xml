<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_pink</item>
        <item name="colorPrimaryVariant">@color/bg_pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="textInputStyle">@style/TextInputStyle</item>

        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/dp_0</item>
        <item name="boxStrokeWidthFocused">@dimen/dp_0</item>
    </style>

    <style name="TitleToolbar" parent="android:TextAppearance">
        <item name="fontFamily">@font/poppins_black</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="background">@color/white</item>
    </style>

    <style name="CustomDialogLoading" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="android:windowMinWidthMajor">@dimen/dp_0</item>
        <item name="android:windowMinWidthMinor">@dimen/dp_0</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/bg_pink</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowMinWidthMinor">100%</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>